{
  "name": "opencx",
  "version": "0.1.0",
  "description": "Open-source currency exchange operation management system",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:frontend": "vite",
    "dev:backend": "convex dev",
    "build": "convex deploy --cmd 'vite build'",
    "build:frontend": "npx convex codegen && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.79",
    "clsx": "^2.1.1",
    "convex": "^1.17.4",
    "countries-and-timezones": "^3.8.0",
    "country-to-currency": "^2.0.2",
    "currency-codes": "^2.2.0",
    "date-fns": "^4.1.0",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "recharts": "^3.5.1",
    "scrypt-kdf": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jose": "^6.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "puppeteer": "^24.31.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
